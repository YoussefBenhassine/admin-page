# Configuration du serveur admin
PORT=3001
NODE_ENV=production

# Configuration PostgreSQL (Render)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Configuration locale PostgreSQL (développement)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=email_campaign_admin
DB_USER=email_campaign_user
DB_PASSWORD=email_campaign_pass

# Configuration MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=email_campaign_admin

# Clé secrète pour le chiffrement des licences
ENCRYPTION_KEY=email_campaign_secret_key_change_in_production

# Configuration CORS
CORS_ORIGIN=*

# Configuration des logs
LOG_LEVEL=info 